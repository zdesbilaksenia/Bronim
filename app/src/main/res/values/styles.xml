<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="back_btn">
        <item name="backgroundTint">@color/main_dark_grey</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@drawable/ic_arrow_left</item>
    </style>

    <style name="fragment_profile_profile_card">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="fragment_profile_field_text">
        <item name="backgroundTint">@color/main_light_grey</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="turquoise_btn">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/turquoise</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="icon_btn">
        <item name="backgroundTint">@color/gray_200</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="white_btn">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="rating_bar">
        <item name="colorControlNormal">@color/gray_200</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="tag_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_dark_color</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxWidth">80dp</item>
    </style>

    <style name="reservations_list_tag_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/main_dark_color</item>
<!--        <item name="android:padding">4dp</item>-->
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:maxWidth">80dp</item>
    </style>

    <style name="dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/main_dark_color</item>
        <item name="strokeColor">@color/main_dark_color</item>
        <item name="strokeWidth">1px</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:solidColor">@color/white</item>
    </style>

    <style name="time">
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeWidth">1px</item>
        <item name="strokeColor">@color/main_dark_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">93dp</item>
        <item name="android:textColor">@color/main_dark_color</item>
    </style>

    <style name="text_input" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">43dp</item>
    </style>
</resources>