<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/horizontal_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:paddingEnd="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/restaurant_image"
                    android:background="@drawable/picture"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="140dp"
                    android:layout_height="140dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                <TextView
                        android:id="@+id/restaurant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="18sp"
                        tools:text="Название ресторана"
                        android:textStyle="bold"
                        android:textColor="@color/main_dark_color" />

                <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_rest_geo"
                            android:layout_gravity="center" />

                    <TextView
                            android:id="@+id/restaurant_address"
                            android:textColor="@color/main_dark_color"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="14sp"
                            tools:text="Адрес ресторана адрес ресторана" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/restaurant_tags"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginTop="8dp">

                </LinearLayout>

                <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/restaurant_rating"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:isIndicator="true"
                        android:stepSize="0.1"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        android:layout_marginTop="8dp"
                        android:theme="@style/rating_bar"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>

