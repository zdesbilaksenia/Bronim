<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/table_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="14dp"
        android:background="@drawable/reservation_item_bckgrnd">

    <ImageView
            android:id="@+id/table_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_table"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/table_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_dark_color"
            android:textSize="18sp"
            tools:text="â„– 1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/table_icon"
            android:layout_marginStart="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>